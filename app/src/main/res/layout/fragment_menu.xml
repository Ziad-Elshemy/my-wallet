<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        tools:context=".HomeFlow.Presentation.Menu.MenuFragment">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/my_transaction_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
            android:drawableStart="@drawable/baseline_assignment_turned_in_24"
            android:drawablePadding="5dp"
            android:gravity="start|center"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            android:text="@string/my_transactions"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:fontFamily="@font/regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/support_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
            android:drawableStart="@drawable/baseline_support_agent_24"
            android:drawablePadding="5dp"
            android:gravity="start|center"
            android:paddingHorizontal="30dp"
            android:text="@string/support"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:fontFamily="@font/regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_transaction_btn" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/privacy_security_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/outline_lock_person_24"
            android:drawablePadding="5dp"
            android:gravity="start|center"
            android:paddingHorizontal="30dp"
            android:text="@string/privacy_security"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/support_btn" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/about_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/outline_error_outline_24"
            android:drawablePadding="5dp"
            android:gravity="start|center"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            android:text="@string/about"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@id/privacy_security_btn"
            tools:layout_editor_absoluteX="-77dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/log_out_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/baseline_login_24"
            android:drawablePadding="5dp"
            android:gravity="start|center"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            android:text="@string/logout"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/regular"
            app:layout_constraintTop_toBottomOf="@id/about_btn"
            tools:layout_editor_absoluteX="-77dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>